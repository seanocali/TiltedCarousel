<Page
    x:Class="InputPromptDemo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:tilted="using:TiltedControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="DimGray">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <tilted:InputPrompt GamepadKey="B"  MaxHeight="50"/>
                <TextBlock VerticalAlignment="Center" FontSize="30" FontWeight="Bold">Go Back</TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <tilted:InputPrompt GamepadKey="A" MaxHeight="50"/>
                <TextBlock VerticalAlignment="Center" FontSize="30" FontWeight="Bold">Select Item</TextBlock>
            </StackPanel>

        </StackPanel>

    </Grid>
</Page>
